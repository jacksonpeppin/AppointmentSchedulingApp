<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="370.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View_Controller.CustomerModificationController">
   <children>
      <HBox layoutX="15.0" layoutY="99.0" prefHeight="26.0" prefWidth="570.0">
         <padding>
            <Insets left="10.0" />
         </padding>
         <children>
            <Label alignment="CENTER" text="Customer ID:" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Label>
            <TextField fx:id="customerIDTextField" alignment="CENTER" editable="false" opacity="0.5" prefHeight="25.0" prefWidth="53.0">
               <HBox.margin>
                  <Insets left="5.0" right="10.0" />
               </HBox.margin>
            </TextField>
            <Label alignment="CENTER" text="Customer Name:" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Label>
            <TextField fx:id="customerNameTextField" alignment="CENTER" prefHeight="25.0" prefWidth="113.0" />
         </children>
      </HBox>
      <HBox layoutX="15.0" layoutY="147.0" prefHeight="26.0" prefWidth="570.0">
         <padding>
            <Insets left="10.0" />
         </padding>
         <children>
            <Label alignment="CENTER" text="Address:" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Label>
            <TextField fx:id="customerAddressTextField" alignment="CENTER" prefHeight="25.0" prefWidth="150.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </TextField>
            <Label alignment="CENTER" text="Postal Code:" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Label>
            <TextField fx:id="customerPostalCodeTextField" alignment="CENTER" prefHeight="25.0" prefWidth="53.0">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin></TextField>
            <Label alignment="CENTER" text="Phone:" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin></Label>
            <TextField fx:id="customerPhoneTextField" alignment="CENTER" prefHeight="25.0" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox layoutX="15.0" layoutY="200.0" prefHeight="26.0" prefWidth="570.0">
         <padding>
            <Insets left="10.0" />
         </padding>
         <children>
            <Label alignment="CENTER" text="Country:" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="5.0" />
               </HBox.margin>
               <padding>
                  <Insets right="5.0" />
               </padding></Label>
            <ComboBox fx:id="countryComboBox" onAction="#countrySelected" prefWidth="150.0">
               <padding>
                  <Insets right="10.0" />
               </padding></ComboBox>
            <Label alignment="CENTER" text="State/Province:" textAlignment="CENTER">
               <padding>
                  <Insets left="10.0" right="5.0" />
               </padding></Label>
            <ComboBox fx:id="stateComboBox" prefWidth="150.0" />
         </children>
      </HBox>
      <Label fx:id="titleLabel" layoutX="14.0" layoutY="14.0" text="Label">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="15.0" layoutY="323.0" prefHeight="26.0" prefWidth="570.0">
         <padding>
            <Insets left="10.0" />
         </padding>
         <children>
            <Button fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonPressed" text="Save">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="exitButton" mnemonicParsing="false" onAction="#exitButtonPressed" text="Exit">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
